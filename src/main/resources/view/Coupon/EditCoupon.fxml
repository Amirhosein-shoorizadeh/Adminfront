<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="10" stylesheets="@../../styles/Admin.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EditCouponController">
    <children>
         <Button fx:id="backButton" onAction="#handleBack" styleClass="button2" text="Back">
         <VBox.margin>
            <Insets right="740.0" top="5.0" />
         </VBox.margin>
      </Button>
        <Label styleClass="label-dashboard" text="Edit Coupon">
         <font>
            <Font size="25.0" />
         </font></Label>
        <TextField fx:id="codeField" prefHeight="35.0" prefWidth="200.0" promptText="Coupon Code">
         <VBox.margin>
            <Insets left="200.0" right="200.0" top="50.0" />
         </VBox.margin></TextField>
        <TextField fx:id="typeField" prefHeight="35.0" prefWidth="762.0" promptText="Type">
         <VBox.margin>
            <Insets left="200.0" right="200.0" />
         </VBox.margin></TextField>
        <TextField fx:id="valueField" promptText="Value">
         <VBox.margin>
            <Insets left="200.0" right="200.0" />
         </VBox.margin></TextField>
        <TextField fx:id="minPriceField" promptText="Min Price">
         <VBox.margin>
            <Insets left="200.0" right="200.0" />
         </VBox.margin></TextField>
        <TextField fx:id="userCountField" promptText="User Count">
         <VBox.margin>
            <Insets left="200.0" right="200.0" />
         </VBox.margin></TextField>
        <TextField fx:id="startDateField" promptText="Start Date">
         <VBox.margin>
            <Insets left="200.0" right="200.0" />
         </VBox.margin></TextField>
        <TextField fx:id="endDateField" promptText="End Date">
         <VBox.margin>
            <Insets left="200.0" right="200.0" />
         </VBox.margin></TextField>
        <HBox spacing="10">
            <Button fx:id="saveButton" onAction="#handleSave" prefHeight="34.0" prefWidth="400.0" styleClass="button2" text="Save">
            <HBox.margin>
               <Insets left="200.0" />
            </HBox.margin>
            <font>
               <Font size="17.0" />
            </font></Button>
        </HBox>
    </children>
</VBox>
