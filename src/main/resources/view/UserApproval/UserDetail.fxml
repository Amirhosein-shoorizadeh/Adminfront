<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" stylesheets="@../../styles/Admin.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UserListController">
    <children>
        <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackAction" prefHeight="26.0" prefWidth="54.0" styleClass="button2" text="Back">
            <VBox.margin>
                <Insets right="720.0" top="5.0" />
            </VBox.margin>
        </Button>
        <Label styleClass="label-title" text="User Details">
            <font>
                <Font size="32.0" />
            </font>
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </Label>
        <Label fx:id="fullNameLabel" styleClass="label-content" text="Name:">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>
        <Label fx:id="phoneLabel" styleClass="label-content" text="Phone:">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>
        <Label fx:id="emailLabel" styleClass="label-content" text="Email:">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>
        <Label fx:id="roleLabel" styleClass="label-content" text="Job:">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>
        <Label fx:id="addressLabel" styleClass="label-content" text="Adress:">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>
        <Label fx:id="bankInfoLabel" styleClass="label-content" text="BankInfo:">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </Label>
        <ImageView fx:id="profileImageView" fitHeight="100.0" fitWidth="100.0" preserveRatio="true">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </ImageView>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button fx:id="approveButton" mnemonicParsing="false" onAction="#handleApproveAction" prefHeight="32.0" prefWidth="87.0" styleClass="button2" text="Approve">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="rejectButton" mnemonicParsing="false" onAction="#handleRejectAction" prefHeight="30.0" prefWidth="91.0" styleClass="button2" text="Reject">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
