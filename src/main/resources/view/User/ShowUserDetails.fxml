<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ShowUserDetailsController" alignment="CENTER" spacing="10" prefWidth="400" prefHeight="500">
    <children>
        <Label fx:id="titleLabel" text="User Details">
            <font>
                <Font name="System Bold" size="16"/>
            </font>
        </Label>
        <Label fx:id="idLabel" text="ID: "/>
        <Label fx:id="nameLabel" text="Full Name: "/>
        <Label fx:id="phoneLabel" text="Phone: "/>
        <Label fx:id="emailLabel" text="Email: "/>
        <Label fx:id="roleLabel" text="Role: "/>
        <Label fx:id="addressLabel" text="Address: "/>
        <Label fx:id="bankNameLabel" text="Bank Name: "/>
        <Label fx:id="accountNumberLabel" text="Account Number: "/>
        <Label fx:id="balanceLabel" text="Wallet Balance: "/>
        <Label fx:id="imageLabel" text="Profile Image: "/>
        <ImageView fx:id="profileImageView" fitWidth="100" fitHeight="100" preserveRatio="true"/>
        <HBox fx:id="buttons" spacing="10">
            <children>
                <Button fx:id="backButton" text="Back" onAction="#handleBack"/>
            </children>
        </HBox>
    </children>
</VBox>