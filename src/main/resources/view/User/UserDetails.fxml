<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="detailsRoot" spacing="10" style="-fx-padding: 10" stylesheets="@../../styles/Admin.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UserDetailsController">
    <children>
        <Label fx:id="titleLabel" text="User Details">
            <font>
                <Font name="System Bold" size="16" />
            </font>
        </Label>
        <Label fx:id="idLabel" styleClass="label-title" text="ID: " />
        <Label fx:id="nameLabel" styleClass="label-title" text="Full Name: " />
        <Label fx:id="phoneLabel" styleClass="label-title" text="Phone: " />
        <Label fx:id="emailLabel" styleClass="label-title" text="Email: " />
        <Label fx:id="roleLabel" styleClass="label-title" text="Role: " />
        <Label fx:id="addressLabel" styleClass="label-title" text="Address: " />
        <Label fx:id="bankNameLabel" styleClass="label-title" text="Bank Name: " />
        <Label fx:id="accountNumberLabel" styleClass="label-title" text="Account Number: " />
        <Label fx:id="balanceLabel" styleClass="label-title" text="Wallet Balance: " />
        <Label fx:id="imageLabel" styleClass="label-title" text="Profile Image: " />
        <ImageView fx:id="profileImageView" fitHeight="100" fitWidth="100" preserveRatio="true" />
        <HBox fx:id="buttons" spacing="10">
            <children>
                <Button fx:id="acceptButton" style="-fx-background-color: #22c55e; -fx-text-fill: white; -fx-cursor: hand;" text="Accept" />
                <Button fx:id="rejectButton" style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-cursor: hand;" text="Reject" />
                <Button fx:id="backButton" style="-fx-background-color: #6b7280; -fx-text-fill: white; -fx-cursor: hand;" text="Back" />
            </children>
        </HBox>
    </children>
</VBox>
